@page "/Rooms"
@using Fluxor.Blazor.Web.Components;
@inherits FluxorComponent;


<MudLink OnClick="AddRoomComponent" Class="py-4 ps-4">
    <MudAvatar Color="Color.Secondary" Variant="Variant.Filled">
        <MudIcon Color="Color.Dark" Icon="@Icons.Material.Filled.Add" Size="Size.Large" />
    </MudAvatar>
</MudLink>
<MudText Typo="Typo.h3" Class="d-inline-block py-2">&nbsp;Rooms</MudText>

@foreach(var room in State.Value.Rooms)
{
    <View Room="room" DeleteRoomCallback="@DeleteRoom"></View>
}